<prefwindow id="Options"
            title="&Options.name;"
            xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
            maxwidth="500"
            onload="return load();"
            buttons="accept,cancel"
            ondialogaccept="return apply();"
            buttonlabelaccept="&Options.accept;"
            buttonlabelcancel="&Options.cancel;">


  <prefpane id="auth" label="&Authentication.name;" selected="true" flex="1">
    <!-- Why is this here?  I don't know either... -->
    <script type="application/x-javascript"
            src="chrome://rtse/content/options.js"/>
    <script type="application/x-javascript"
            src="chrome://rtse/content/functions.js"/>
    <preferences>
      <preference id="pref_username"
                  name="extensions.rtse.username"
                  type="string"/>
      <preference id="pref_signin"
                  name="extensions.rtse.signin"
                  type="bool"/>
    </preferences>
    <vbox flex="1">
      <hbox>
        <label value="&Authentication.usernamelabel;" control="username"/>
        <textbox id="username"
                 maxlength="12"
                 size="12"
                 width="120"
                 preference="pref_username"/>
      </hbox>
      <hbox>
        <label value="&Authentication.passwordlabel;" control="pwd"/>
        <textbox id="pwd"
                 maxlength="16"
                 size="16"
                 type="password"
                 width="120"/>
      </hbox>
      <spacer style="height: 10px"/>
      <checkbox id="signin"
                label="&Authentication.enableloginlabel;"
                preference="pref_signin"/>
    </vbox>
  </prefpane>
  <prefpane id="prefs" label="&Preferences.name;" flex="1">
    <preferences>
      <preference id="pref_theme"
                  name="extensions.rtse.themeType"
                  type="string"/>
      <preference id="pref_themer"
                  name="extensions.rtse.themer"
                  type="bool"/>
      <preference id="pref_links"
                  name="extensions.rtse.fixLinks"
                  type="bool"/>
    </preferences>
    <vbox flex="1">
      <hbox>
        <label value="&Preferences.prefskinlabel;"/>
        <menulist id="themeType" preference="pref_theme">
          <menupopup>
            <menuitem label="&Preferences.RTskinoption;" value="www"/>
            <menuitem label="&Preferences.RvBskinoption;" value="rvb"/>
            <menuitem label="&Preferences.SHskinoption;" value="sh"/>
            <menuitem label="&Preferences.Panicsskinoption;" value="panics"/>
          </menupopup>
        </menulist>
      </hbox>
      <spacer style="height: 10px"/>
      <description>&Preferences.linkfixinglabel;</description>
      <spacer style="height: 10px"/>
      <checkbox id="theme"
                label="&Preferences.enableskinlabel;"
                preference="pref_themer"
                onchange="theme();"/>
      <checkbox id="linkFix"
                label="&Preferences.enablelinkfixing;"
                preference="pref_links"/>
    </vbox>
  </prefpane>
  <prefpane id="extensions" label="&Extension.name;" flex="1">
    <preferences>
      <preference id="pref_sponsor"
                  name="extensions.rtse.sponsor"
                  type="bool"/>
      <preference id="pref_smilies"
                  name="extensions.rtse.smilies"
                  type="bool"/>
      <preference id="pref_editor"
                  name="extensions.rtse.editor"
                  type="bool"/>
      <preference id="pref_SPR"
                  name="extensions.rtse.samePageReply"
                  type="bool"/>
    </preferences>
    <vbox flex="1">
      <groupbox width="400">
        <caption label="&Extension.addedfeatures;"/>
        <checkbox id="sponsor"
                  label="&Extension.enablesponsoronly;"
                  preference="pref_sponsor"/>
        <description>&Extension.sponsoronlylabel;</description>
        <checkbox id="smilies"
                  label="&Extension.enablesmiley;"
                  preference="pref_smilies"/>
        <spacer style="height:10px;"/>
        <vbox>
          <hbox>  
            <button id="import_smilies"
                    label="&Extension.importsmiley;"
                    width="100"
                    tooltiptext="&Tooltip.smileys;"
                    oncommand="smilieFilePicker(window);"/>
            <spacer flex="1"/>
          </hbox>
          <richlistbox suppressonselect="true"
                       id="smileyPreview"
                       maxheight="30"/>
        </vbox>
      </groupbox>
      <groupbox width="400">
        <caption label="&Extension.uicaption;"/>
        <checkbox id="editor"
                  label="&Extension.enableadvancededitor;"
                  preference="pref_editor"/>
        <checkbox id="same_page_reply"
                  label="&Extension.samepagereplies;"
                  preference="pref_SPR"/>
      </groupbox>
    </vbox>
  </prefpane>
